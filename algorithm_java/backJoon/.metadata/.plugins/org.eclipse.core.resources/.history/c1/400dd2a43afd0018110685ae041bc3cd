import java.util.Scanner;

public class test_5585 {
	
	private static int calChange(int charge, int count) {
		if(charge/500 >= 1) {
			count++;
			charge /=500;
		}else if(charge/100 >=1) {
			count++;
			charge /=100;
		}else if(charge/50 >=1) {
			count++;
			charge /=50;
		}else if(charge/10 >=1) {
			count++;
			charge /=10;
		}else {
			count = count + charge;
		}
		calChange(charge, count);
		
		return count;
	}

	public static void main(String[] args) {
		// 돈 내면 거스롬돈 동전 개수 제일 적게 주기 => 500, 100, 50, 10, 1 의 동전 있음
		Scanner scan = new Scanner(System.in);	
		int charge = scan.nextInt();
		int change =0;
		
		System.out.println(calChange(charge,change));
	}

}
