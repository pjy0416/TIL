import java.util.Scanner;

public class test_5585 {
	
	private static int calChange(int charge, int count) {
		if(charge/500 >= 1) {
			count++;
			calChange(charge/500, count);
		}
		
		return count;
	}

	public static void main(String[] args) {
		// 돈 내면 거스롬돈 동전 개수 제일 적게 주기 => 500, 100, 50, 10, 1 의 동전 있음
		Scanner scan = new Scanner(System.in);	
		int fee = scan.nextInt();	
		
		
		
		
	}

}
