import java.util.HashSet;
import java.util.Scanner;
import java.util.Set;
import java.util.Stack;

public class test_16472 {		// over time code
	
	private static int changeMax(int max, int count) {
		if(count > max) {
			max = count;
		}
		return max;
	}
	
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		byte alphaSize = scan.nextByte();	// 알파벳 종류
		scan.nextLine();	// 개행문자 제거를 위한 method call
		String str = scan.nextLine().replaceAll("[^a-zA-Z]", "");
		char[] alphas = str.toCharArray();
		Set<Character> alphaKind = new HashSet<>();
		
		int line = str.length();
		int max =0;
		
		for(int i=0; i<line; i++) {
			alphaKind.clear();
			
			if(line-i <= max) {	// 남은 문자 counting이 max에 대해 작거나 같으면 종료(코드 실행이 무의미)
				break;
			}
			for(int j=i; j<line; j++) {
				alphaKind.add(alphas[j]);
				if(alphaKind.size() > alphaSize) {	// Set에 담긴 alphabet 종류의 수가 입력받은 최대 size보다 크면 종료
					max = changeMax(max, j-i);		// 종료 시 count가 Max보다 크면 max를 count로 변환
					break;
				}
			}
		}
		
		if(max != 0) {
			System.out.println(max);			
		} else {
			System.out.println(str.length());
		}
		
		scan.close();
	}
	
}